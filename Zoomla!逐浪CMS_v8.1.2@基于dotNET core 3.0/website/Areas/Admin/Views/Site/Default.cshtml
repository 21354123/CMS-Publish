            // From large to small
            protected void Sort(ref int[] list)
            {
                int i, j, temp;
                bool done = false; j = 1;
                while ((j < list.Length) && (!done))
                {
                    done = true;
                    for (i = 0; i < list.Length - j; i++)
                    {
                        if (list[i] < list[i + 1])//> is the oppsite(from small to large)
                        {
                            done = false;
                            temp = list[i];
                            list[i] = list[i + 1];
                            list[i + 1] = temp;
                        }
                    }
                    j++;
                }
            }

