@model ZoomLa.Model.Safe.M_Safe_IP
@section head{<title>IP管理</title> }
@section content{ 
@Call.SetBread(new Bread[] {
new Bread("{admin}"),
new Bread("SiteIP","IP策略"),
new Bread(Context.Request.RawUrl(),"IP管理")
})
<form method="post" action="@MVCHelper.GetAction("SiteIPAdd_Submit",Context.Request)">
<div class="list_choice">
    <table class="table table-bordered">
        <tr><th class="td_m">IP/IP号段</th>
        <td>@Html.TextBoxFor(m=>m.IP,new {@class="form-control text_300 required" })
            <div><small>最后一位支持*通配,示例:155.155.10.*</small></div>
            </td></tr>
        <tr><th>到期日期</th>
        <td>@Html.TextBoxFor(m=>m.EDate,new {@class="form-control text_300",onclick="WdatePicker({ dateFmt: 'yyyy/MM/dd' });" })
            <div><small>到期后,IP将解除限定</small></div>
            </td></tr>
        <tr><th class="td_m">备注</th>
        <td>@Html.TextAreaFor(m=>m.Remind,new {@class="form-control",rows="5" })</td></tr>
        <tr><td></td><td><input type="submit" value="保存信息" class="btn btn-info"/></td></tr>
    </table>
</div>
</form>
}
@section script{ 
<script src="~/js/DatePicker/WdatePicker.js"></script>
    <script>
        $("form").validate({});
    </script>
}