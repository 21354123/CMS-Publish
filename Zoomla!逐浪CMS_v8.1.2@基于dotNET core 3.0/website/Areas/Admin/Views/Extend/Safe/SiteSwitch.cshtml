@{ 
    string pageName = "站点开关";
}
@section head{<title>@pageName</title> }
@section content{ 
    @Call.SetBread(new Bread[]{
     new Bread("{admin}"),
     new Bread(Call.PA("Extend/Safe/Default"),"安全中心"),
     new Bread(Context.Request.RawUrl(),pageName)
    })
<form method="post" action="@MVCHelper.GetAction("SiteSwitch_Submit",Context.Request)">
<div class="list_choice">
    <div class="card card-info">
        <div class="card-header"><i class="zi zi_desktop"></i> 站点开关配置</div>
        <div class="card-body">
             <div>
                 <label><input type="radio" name="safe_site_switch" value="" checked="checked"/>不限制</label>
                 <label><input type="radio" name="safe_site_switch" value="all"/>全站关闭</label>
                 <label><input type="radio" name="safe_site_switch" value="front"/>仅前端关闭</label>
                 <label><input type="radio" name="safe_site_switch" value="index"/>仅首页警示</label>
             </div>
             <div class="alert alert-info">
                 <div>全 站 关 闭：前端与后端均不可访问,再次开启必须直接服务器验证</div>
                 <div>仅前端关闭：后端管理页可正常访问,其余页面自动跳转至提示页</div>
                 <div>仅首页警示：仅首页显示警示,其余功能均可正常使用</div>
             </div>
        </div>
        <div class="card-footer">
             <input type="submit" value="保存配置" class="btn btn-info"/>
        </div>
    </div>
</div>
</form>
}
@section script{ 

